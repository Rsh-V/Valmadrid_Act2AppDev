@using SpendingTracker.Models
@{
    ViewData["Title"] = "Expenses";
}

@model List<Expense>
<div class="text-center">
    <h1 class="display-4">My Expenses</h1>
	<br />
	<table class="table table-striped">
		<thead>
			<tr>
				<th>ID</th>
				<th>Value ₱</th>
				<th>Description</th>
			</tr>
		</thead>
		<tbody>
			@foreach (var expense in Model)
			{
				<tr>
					<td>@expense.Id</td>
					<td>@expense.Value</td>
					<td>@expense.Description</td>
				</tr>
			}
		</tbody>
	</table>
	<a asp-action="CreateExpense" class="btn btn-secondary">Create new</a>
</div>
